<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kazim.homeworkanimalfinder">
    <!-- for TTS service -->
    <queries>
        <intent>
            <action android:name="android.intent.action.TTS_SERVICE" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HomeworkAnimalFinder">
        <activity android:name=".WrongAnswer"></activity>
        <activity android:name=".Level5" />
        <activity android:name=".Level4" />
        <activity android:name=".Level3" />
        <activity android:name=".CorrectAnswer" />
        <activity android:name=".Level2" />
        <activity android:name=".Level1" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>